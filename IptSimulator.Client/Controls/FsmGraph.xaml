     <Grid>
        <Grid.Resources>
            <ResourceDictionary Source="../Resources/Themes/FsmGraphStyles.xaml"/>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3"/>
            <ColumnDefinition Width="300" MinWidth="300"/>
        </Grid.ColumnDefinitions>

        
        <graphx:ZoomControl x:Name="GraphZoomControl"
                            Grid.Column="0"
                            AnimationLength="00:00:00.200">
            <fsmGraph:FsmGraphArea x:Name="GraphArea"/> 
        </graphx:ZoomControl>

        <GridSplitter Grid.Column="1"
                      HorizontalAlignment="Stretch"
                      Background="Gray"/>
        
        <xctk:PropertyGrid Name="GraphPropertyGrid"
                           Grid.Column="2"
                           IsCategorized="True"
                           ShowAdvancedOptions="True"
                           ShowSearchBox="False">
            
        </xctk:PropertyGrid>
        
    </Grid>
</UserControl>
